<com.github.k1rakishou.chan.ui.theme.widget.TouchBlockingLinearLayoutNoBackground xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.github.k1rakishou.chan.ui.theme.widget.ColorizableTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="20sp" />

    <com.github.k1rakishou.chan.ui.theme.widget.ColorizableButton
        android:id="@+id/retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/thread_load_failed_retry" />

    <com.github.k1rakishou.chan.ui.theme.widget.ColorizableButton
        android:id="@+id/open_in_archive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="@string/thread_load_failed_open_in_archive" />

</com.github.k1rakishou.chan.ui.theme.widget.TouchBlockingLinearLayoutNoBackground>
